{
    "compilerOptions": {
      "target": "es6",
      "lib": ["ES6", "DOM"],
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "spec", "dist"]
}